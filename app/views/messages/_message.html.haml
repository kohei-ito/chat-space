.main__message-field__message
  .main__message-field__message__info
    .main__message-field__message__info__name
      = message.user.name
    .main__message-field__message__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main__message-field__message__box
    - if message.content.present?
      .main__message-field__message__box__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?