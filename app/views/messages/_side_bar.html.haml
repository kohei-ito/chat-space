.side-bar  
  .side-bar__user-name
    .side-bar__user-name__top-items
      .side-bar__user-name__top-items__name
        = current_user.name
      .side-bar__user-name__top-items__icons
        = link_to new_group_path, class: "icon-edit" do
          = icon('fas','edit')
        = link_to edit_user_path(current_user), class: "icon-cog" do
          = icon('fas','cog')

  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group
        = link_to group_messages_path(group) do
          .side-bar__group-list__group__name
            = group.name
          .side-bar__group-list__group__message
            = group.show_last_message
    
